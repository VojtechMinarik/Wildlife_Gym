<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wildlifegym">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WildlifeGym">
        <activity
            android:name=".activities.QuizActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ShadowActivity"
            android:exported="false" />
        <activity
            android:name=".activities.DifferenceActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EncyclopediaActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.MemoryActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PoemActivity"
            android:exported="false" />
        <activity
            android:name=".activities.VideoActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".services.MusicService" />
    </application>

</manifest>